<% include header %>
<div class="container">
    <h1 class="text-center"><i class="fas fa-gift"></i> Reward Setting</h1>
    <div class="reward-table">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col"><i class="fas fa-edit"></i> Click to edit</th>
                    <th scope="col"><i class="fas fa-link"></i> Id</th>
                    <th scope="col"><i class="fas fa-link"></i> Color</th>
                    <th scope="col"><i class="fas fa-link"></i> Text</th>
                    <th scope="col"><i class="fas fa-gift"></i> Value</th>
                </tr>
            </thead>
            <tbody>
                <%settings.rewards.forEach(rw => { %>
                <tr class="edit">
                    <td><a href="#edit">edit</a></td>
                    <td class="id"><%=rw._id%></td>
                    <td class="color"><%=rw.fillStyle%></td>
                    <td class="text"><%=rw.text%></td>
                    <td class="value"><%=rw.value%></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <section id="edit">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center"><i class="fas fa-edit"></i> Add or Edit Reward</h2>
                <form action="/admin/reward/add" method="POST">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label">ID</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">#</span>
                                </div>
                                <input type="text" id="_id" name="_id" class="form-control" value="" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label">Color</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-palette"></i></span>
                                </div>
                                <input type="text" name="fillStyle" id="color" class="form-control" value="" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label">Text</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-paragraph"></i></span>
                                </div>
                                <input type="text" name="text" id="text" class="form-control" value="" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label">Value</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-gift"></i></span>
                                </div>
                                <input type="number" name="value" id="value" class="form-control" value="" required>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="add" value="0">
                    <button type="submit" class="btn btn-block btn-info">ADD / UPDATE</button>
                </form>
            </div>
            <div class="col-md-6">
                <h2 class="text-center"><i class="fas fa-trash-alt"></i> Remove Reward</h2>
                <form action="/admin/reward/delete" method="POST">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label">ID</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">#</span>
                                </div>
                                <input type="text" name="_id" class="form-control" value="" required>
                                <input type="hidden" name="add" value="1">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-block btn-danger">DELETE</button>
                </form>
            </div>
        </div>
    </section>

</div>
<% include footer %>