<% include header %>
<div class="container">
	<h1 class="text-center"><i class="fas fa-shield-alt"></i> Security Setting</h1>
	<form action="/admin/update" method="post">
		<div class="form-group">
		<div class="form-group">
			<label class="control-label">Solvemedia Challenge Key</label>
			<div class="form-group">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="fas fa-globe-asia"></i></span>
					</div>
					<input type="text" class="form-control" name="faucet_ckey" value="<%= settings.faucet_ckey %>">
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label">Solvemedia Private Key</label>
			<div class="form-group">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="fas fa-globe-asia"></i></span>
					</div>
					<input type="text" class="form-control" name="faucet_vkey" value="<%= settings.faucet_vkey %>">
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label">Solvemedia Hash Key</label>
			<div class="form-group">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="fas fa-globe-asia"></i></span>
					</div>
					<input type="text" class="form-control" name="faucet_hkey" value="<%= settings.faucet_hkey %>">
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label">Iphub API</label>
			<div class="form-group">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="fas fa-key"></i></span>
					</div>
					<input type="text" class="form-control" name="faucet_iphub" value="<%= settings.faucet_iphub %>">
				</div>
			</div>
		</div>
		<button class="btn btn-success btn-lg btn-block" name="overview"><i class="fas fa-check"></i> Update</button>
	</form>
</div>
<% include footer %>